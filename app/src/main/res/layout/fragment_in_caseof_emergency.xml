<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <View
        android:layout_width="@dimen/dp0"
        android:layout_height="match_parent"
        android:layout_weight="0.3"></View>


    <FrameLayout
        android:layout_width="@dimen/dp0"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingTop="@dimen/common_padding"
        tools:context="com.myrescribe.demo.fragments.InCaseofEmergency">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/nameofperson"
                    android:visibility="gone" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/nameofpersonLay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/nameofperson"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/personname"
                        android:inputType="textPersonName"
                        android:textSize="@dimen/sp12" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/relationship"
                    android:visibility="gone" />

                <Spinner
                    android:id="@+id/relationshipSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="15dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/phoneno"
                    android:visibility="gone" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/phoneNoLay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/phoneno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Phone No:(999)999-9999"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:textSize="@dimen/sp12" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/alternate_no"
                    android:visibility="gone" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/alternateNoLay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/alternate_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Alternate No:(999)999-9999"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:textSize="@dimen/sp12" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>


    <View
        android:layout_width="@dimen/dp0"
        android:layout_height="match_parent"
        android:layout_weight="0.3"></View>

</LinearLayout>